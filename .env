# Database Configuration
MONGO_URI=mongodb://localhost:27017/bloodcare_db

# JWT Configuration
JWT_SECRET=bloodcare_super_secret_jwt_key_2024_development
JWT_REFRESH_SECRET=bloodcare_refresh_token_secret_key_2024
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (for OTP and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=bloodcare.noreply@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=bloodcare
CLOUDINARY_API_KEY=123456789012345
